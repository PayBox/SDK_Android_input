<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="10dp"
                android:padding="15dp"
                android:background="@drawable/card_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:text="Инициализация платежа"
                    android:layout_gravity="center_horizontal"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <EditText
                        android:id="@+id/amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="10dp"
                        android:hint="Сумма"
                        android:inputType="numberDecimal"
                        android:layout_toLeftOf="@+id/kzt1"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:id="@+id/kzt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textSize="15dp"
                        android:text="ТГ."/>
                </RelativeLayout>
                <EditText
                    android:id="@+id/payUserId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="10dp"
                    android:inputType="text"
                    android:hint="user ID"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"/>
                <EditText
                    android:id="@+id/comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="10dp"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:hint="Комментарии"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"/>
                <CheckBox
                    android:id="@+id/recurring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:text="Рекурентный"/>
                <Button
                    android:id="@+id/create"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_background"
                    android:text="Создать"/>
                <TextView
                    android:id="@+id/payInitResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:elevation="10dp"
                android:padding="15dp"
                android:background="@drawable/card_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:text="Отмена платежа"
                    android:layout_gravity="center_horizontal"/>

                <EditText
                    android:id="@+id/paymentCancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="10dp"
                    android:inputType="number"
                    android:hint="payment ID"
                    android:imeOptions="actionDone"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_background"
                    android:text="Отменить"/>
                <TextView
                    android:id="@+id/payCancelResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:elevation="10dp"
                android:padding="15dp"
                android:background="@drawable/card_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:text="Возврат платежа"
                    android:layout_gravity="center_horizontal"/>

                <EditText
                    android:id="@+id/paymentRevoke"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="10dp"
                    android:inputType="number"
                    android:hint="payment ID"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <EditText
                        android:id="@+id/amountRevoke"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="10dp"
                        android:inputType="number"
                        android:imeOptions="actionDone"
                        android:hint="Сумма"
                        android:layout_toLeftOf="@+id/kzt2"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:id="@+id/kzt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textSize="15dp"
                        android:text="ТГ."/>
                </RelativeLayout>

                <Button
                    android:id="@+id/revoke"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_background"
                    android:text="Возврат"/>
                <TextView
                    android:id="@+id/payRevokeResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>